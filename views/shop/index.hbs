{{# each products}}
<div class="row">
  {{# each this}}
  <div class="col-md-4 col-sm-6">
    <div class="card" style="width:20rem">

        <img class="card-img-top img-fluid" src="{{this.imagePath}}" alt="Card image cap" >

      <div class="card-body">
        <h4 class="card-title">{{this.title}}</h4>
        <p class="card-text">{{this.description }}</p>
        <span class="price">
          $ {{this.price}}
        </span>
        <a href="/add-to-cart/{{this._id}}" class="btn btn-primary pull-right">Add to Cart</a>
      </div>
    </div>
  </div>

  {{/each}}
</div>
{{/each}}
